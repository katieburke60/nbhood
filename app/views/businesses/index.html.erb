
<%= render 'layouts/businesses'%>

<div>

<div class='form-group text-center'>
  <%= form_tag('businesses', :method => 'get', :id => 'search form') do %>
    <br /> <%= text_field_tag :search, nil, style:"margin-top:5px; margin-bottom: 5px;"%>
    <br />
    <div class='col-sm-5'>
    </div>
    <div class='col-sm-2'>
      <%= submit_tag "Search", name: nil, class: "form-control"%>
    <% end %>
  </div>
</div>

<br /><br />

<% if !@businesses.blank? %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Events</th>
    </tr>
  </thead>
  <tbody>
    <% @businesses.each do |business| %>
    <tr>
      <td><%= link_to business.name, business_path(business) %></td>
      <td><%= pluralize(business.events.count, 'event') %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if @businesses.blank? %>
<h4>There are no businesses containing the term <%= @search %></h4>
<% end %>

<br>
</div>
